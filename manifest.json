{
    "name": "Web Annotator",
    "version": "0.0.1",
    "description": "Tool for annotating on a webpage",
    "permissions": [
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "contentScript.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "demo.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "manifest_version": 3
}